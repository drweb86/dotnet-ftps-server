<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FtpsServerMaui.ViewModels"
             x:Class="FtpsServerMaui.Views.UserEditorPage"
             x:DataType="viewModels:UserEditorViewModel"
             Title="{Binding IsEditMode, Converter={StaticResource BoolToEditTitleConverter}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="{Binding IsEditMode, Converter={StaticResource BoolToEditHeaderConverter}}" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- Username -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Username *" FontAttributes="Bold"/>
                <Entry Text="{Binding Username}"
                       Placeholder="Enter username"
                       IsEnabled="{Binding IsEditMode, Converter={StaticResource InvertedBoolConverter}}"/>
                <Label Text="Username cannot be changed after creation" 
                       FontSize="12"
                       TextColor="Gray"
                       IsVisible="{Binding IsEditMode}"/>
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Password *" FontAttributes="Bold"/>
                <Entry Text="{Binding Password}"
                       Placeholder="Enter password"
                       IsPassword="True"/>
            </VerticalStackLayout>

            <!-- Folder -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Root Folder *" FontAttributes="Bold"/>
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Grid.Column="0"
                           Text="{Binding Folder}"
                           Placeholder="Select or enter folder path"/>
                    <Button Grid.Column="1"
                            Text="Browse"
                            Command="{Binding BrowseFolderCommand}"
                            Margin="5,0,0,0"/>
                </Grid>
                <Label Text="This user will have access to this folder" 
                       FontSize="12"
                       TextColor="Gray"/>
            </VerticalStackLayout>

            <!-- Permissions -->
            <Border StrokeThickness="1"
                    Stroke="LightGray"
                    Padding="15"
                    StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Permissions" FontSize="18" FontAttributes="Bold"/>
                    
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding ReadPermission}"/>
                        <Label Text="Read Permission (LIST, RETR)" 
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding WritePermission}"/>
                        <Label Text="Write Permission (STOR, DELE, MKD, RMD)" 
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"/>
                <Button Grid.Column="1"
                        Text="Save"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="Green"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
