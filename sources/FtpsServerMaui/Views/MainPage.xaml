<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FtpsServerMaui.ViewModels"
             x:Class="FtpsServerMaui.Views.MainPage"
             x:DataType="viewModels:MainViewModel"
             Title="FTPS Server"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Server Status Card -->
            <Border StrokeThickness="2" 
                    Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                    Background="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                    Padding="15"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Server Status" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    
                    <Label Text="{Binding ServerStatus}" 
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{Binding IsServerRunning, Converter={StaticResource BoolToColorConverter}}"/>
                    
                    <Button Text="Stop Server"
                            Command="{Binding StopServerCommand}"
                            IsVisible="{Binding IsServerRunning}"
                            BackgroundColor="Red"
                            TextColor="White"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- Setup Buttons -->
            <Border StrokeThickness="2" 
                    Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                    Background="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                    Padding="15"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Server Configuration" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    
                    <Button Text="Simple Setup"
                            Command="{Binding OpenSimpleSetupCommand}"
                            IsEnabled="{Binding IsServerRunning, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Primary}"/>
                    
                    <Button Text="Advanced Setup"
                            Command="{Binding OpenAdvancedSetupCommand}"
                            IsEnabled="{Binding IsServerRunning, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Secondary}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Server Logs -->
            <Border StrokeThickness="2" 
                    Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                    Background="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                    Padding="15"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="10">
                    <Grid>
                        <Label Text="Server Logs" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>
                        
                        <Button Text="Clear"
                                Command="{Binding ClearLogsCommand}"
                                HorizontalOptions="End"
                                BackgroundColor="Orange"
                                Padding="10,5"/>
                    </Grid>
                    
                    <CollectionView ItemsSource="{Binding LogMessages}"
                                    HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Label Text="{Binding}"
                                       FontSize="12"
                                       FontFamily="Courier"
                                       Padding="5,2"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
