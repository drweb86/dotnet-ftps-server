<UserControl x:Class="FtpsServerWindows.Controls.ServerConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FtpsServerWindows.Controls"
             xmlns:res="clr-namespace:FtpsServerWindows.Resources">

    <Border Background="{StaticResource TertiaryDarkBrush}"
            BorderBrush="{StaticResource AccentCyanBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16"
            Margin="10,0,20,20">
        <StackPanel>
            <TextBlock Text="{x:Static res:Strings.ConfigTitle}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,20"/>

            <TextBlock Text="{x:Static res:Strings.ConfigAddress}" Style="{StaticResource ModernLabel}"/>

            <TextBlock TextWrapping="Wrap"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryBrush}">
                <Run Text="{x:Static res:Strings.ConfigAccessInfo}"/>
                <LineBreak />
                <Run Text="{x:Static res:Strings.ConfigName}"/>
                <Run x:Name="PCName" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                <LineBreak />
                <Run Text="{x:Static res:Strings.ConfigNetworkIPs}"/>
            </TextBlock>

            <ItemsControl x:Name="NetworkIpsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10 5 0 5">
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="{Binding InterfaceType}"/>
                                <Run Text="{x:Static res:Strings.ConfigNetwork}"/>
                                <Run Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding Description}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Run Text=")"/>
                            </TextBlock>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="{x:Static res:Strings.ConfigIPAddresses}"/>
                                </TextBlock>

                                <ItemsControl ItemsSource="{Binding Addresses}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding .}"
                                                       TextWrapping="Wrap"
                                                       FontSize="13"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0 0 5 0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Port -->
                <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Port" Style="{StaticResource ModernLabel}" 
                    Margin="0,14,12,0"
                />
                <controls:NumericUpDown
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    x:Name="PortControl"
                    Minimum="2121"
                    Value="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,16"
                />

                <!-- Max Connections -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0,14,12,0"
                    Text="{x:Static res:Strings.ConfigMaxConnections}"
                    Style="{StaticResource ModernLabel}"/>
                <controls:NumericUpDown x:Name="MaxConnectionsControl"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Minimum="2"
                    Value="{Binding MaxConnections, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,16"/>

                <!-- Certificate -->
                <CheckBox
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.Row="2"
                    x:Name="SelfSignedCertButton"
                    Content="{x:Static res:Strings.ConfigUseSelfSigned}"
                    IsChecked="True"
                    Style="{StaticResource ModernCheckBox}"
                    Margin="0,0,12,16"
                    Checked="CertificateSourceChanged"
                    Unchecked="CertificateSourceChanged"
                />

                <TextBlock
                    Visibility="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Grid.Column="0"
                    Grid.Row="3"
                    Margin="0,14,12,0"
                    Text="{x:Static res:Strings.ConfigCertFile}" Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="CertPathTextBox"
                    Visibility="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Grid.Column="1"
                    Grid.Row="3"
                    Style="{StaticResource ModernTextBox}"
                    IsReadOnly="True"
                    Margin="0,0,0,16"
                />
                <Button
                    Grid.Column="2"
                    Grid.Row="3"
                    Content="{x:Static res:Strings.ConfigBrowse}"
                    Visibility="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="12,0,0,16"
                    Click="BrowseCertificate_Click"/>


                <TextBlock
                    Grid.Column="0"
                    Grid.Row="4"
                    Margin="0,14,12,0"
                    Visibility="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Text="{x:Static res:Strings.ConfigCertPassword}" Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="CertPasswordBox"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Grid.Row="4"
                    Margin="0,0,0,16"
                    Visibility="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Style="{StaticResource ModernTextBox}"
                    Text="{Binding CertificatePassword, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
