<UserControl x:Class="FtpsServerWindows.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:FtpsServerWindows.Resources">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="ValueTextBox"
                 Grid.Column="0"
                 Style="{StaticResource ModernTextBox}"
                 PreviewTextInput="ValueTextBox_PreviewTextInput"
                 TextChanged="ValueTextBox_TextChanged"/>

        <StackPanel Grid.Column="1" Margin="8,0,0,0">
            <Button x:Name="UpButton"
                    Content="{x:Static res:Strings.NumericUp}"
                    Click="UpButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    Padding="8,2"
                    FontSize="10"
                    MinWidth="30"/>
            <Button x:Name="DownButton"
                    Content="{x:Static res:Strings.NumericDown}"
                    Click="DownButton_Click"
                    Style="{StaticResource SecondaryButton}"
                    Padding="8,2"
                    FontSize="10"
                    MinWidth="30"
                    Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
