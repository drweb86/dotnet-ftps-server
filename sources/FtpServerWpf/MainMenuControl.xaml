<UserControl x:Class="FtpsServerApp.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:commands="clr-namespace:FtpsServerApp.Commands">

    <UserControl.Resources>
        <commands:AboutCommand x:Key="AboutCommand"/>
        <commands:LicenseCommand x:Key="LicenseCommand"/>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>
    </UserControl.Resources>

    <Menu Background="{StaticResource PrimaryDarkBrush}"
          Foreground="{StaticResource TextPrimaryBrush}">
        <MenuItem x:Name="AboutMenuItem"
                  Header="FTPS Server"
                  Command="{StaticResource AboutCommand}">
            <MenuItem.Icon>
                <Image Source="FtpsApp.png" />
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="License"
                  Command="{StaticResource LicenseCommand}" />
    </Menu>
</UserControl>
