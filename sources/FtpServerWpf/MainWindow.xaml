<Window x:Class="FtpsServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FtpsServerApp"
        Title="FTPS Server" Height="700" Width="1100"
        Background="{StaticResource PrimaryDarkBrush}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"

        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsServerRunning}" Value="True">
                    <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentCyanBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TertiaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Margin="0">
        <local:MainMenuControl DockPanel.Dock="Top" />

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Grid.Column="0">
                    <Ellipse Style="{StaticResource StatusIndicator}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" 
                               Text="Server Stopped" 
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="StartStopButton" 
                        Content="START SERVER" 
                        Style="{StaticResource ModernButton}"
                        Click="StartStopButton_Click"
                        MinWidth="160"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal">


                            <Border Background="{StaticResource TertiaryDarkBrush}"
        BorderBrush="{StaticResource AccentCyanBrush}"
        BorderThickness="1"
        CornerRadius="8"
        Padding="16"
        Margin="10,20,10,0">
                                <StackPanel>
                                    <TextBlock Text="Server Configuration" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,20"/>

                                    <!-- IP Address -->
                                    <TextBlock Text="IP Address" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="ServerIpTextBox" 
                                         Text="0.0.0.0"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,16"/>

                                    <!-- Port -->
                                    <TextBlock Text="Port" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="ServerPortTextBox" 
                                         Text="2121"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,16"/>

                                    <!-- Max Connections -->
                                    <TextBlock Text="Max Connections" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="MaxConnectionsTextBox" 
                                         Text="10"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,24"/>

                                    <!-- Certificate -->
                                    <TextBlock Text="Certificate Source" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,16"/>

                                    <RadioButton x:Name="SelfSignedCertButton" 
                                             Content="Self-Signed (Auto-Generated)" 
                                             GroupName="CertSource"
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             IsChecked="True"
                                             Margin="0,0,0,12"
                                             Checked="CertificateSourceChanged"/>

                                    <RadioButton x:Name="FileCertButton" 
                                             Content="From File (.pfx, .pem, .der)" 
                                             GroupName="CertSource"
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             Margin="0,0,0,16"
                                             Checked="CertificateSourceChanged"/>

                                    <StackPanel x:Name="CertFilePanel" Visibility="Collapsed">
                                        <TextBlock Text="Certificate File" Style="{StaticResource ModernLabel}"/>
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="CertPathTextBox" 
                                                 Grid.Column="0"
                                                 Style="{StaticResource ModernTextBox}"
                                                 IsReadOnly="True"/>
                                            <Button Grid.Column="1" 
                                                Content="Browse" 
                                                Style="{StaticResource SecondaryButton}"
                                                Margin="12,0,0,0"
                                                Click="BrowseCertificate_Click"/>
                                        </Grid>

                                        <TextBlock Text="Password (if required)" Style="{StaticResource ModernLabel}"/>
                                        <TextBox x:Name="CertPasswordBox" 
                                                 Style="{StaticResource ModernTextBox}"
                                                 Margin="0,0,0,16"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource TertiaryDarkBrush}"
        BorderBrush="{StaticResource AccentCyanBrush}"
        BorderThickness="1"
        CornerRadius="8"
        Padding="16"
        Margin="10,20,10,0">
                                <StackPanel >
                                    <Grid Margin="0,0,0,16">
                                        <TextBlock Text="Users" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"/>
                                        <Button Content="+ Add" 
                                            Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Right"
                                            Click="AddUser_Click"
                                            Padding="16,8"/>
                                    </Grid>

                                    <ItemsControl x:Name="UsersItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource TertiaryDarkBrush}"
                                                    BorderBrush="{StaticResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Padding="16"
                                                    Margin="0,0,0,16">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Username -->
                                                        <Grid Grid.Row="0" Margin="0,0,0,12">
                                                            <TextBlock Text="Username" Style="{StaticResource ModernLabel}"/>
                                                            <Button Content="✕" 
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Top"
                                                                Background="Transparent"
                                                                Foreground="{StaticResource ErrorBrush}"
                                                                BorderThickness="0"
                                                                FontSize="16"
                                                                Padding="8,0"
                                                                Cursor="Hand"
                                                                Click="RemoveUser_Click"
                                                                Tag="{Binding}"/>
                                                        </Grid>
                                                        <TextBox Grid.Row="0" 
                                                             Text="{Binding Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource ModernTextBox}"
                                                             Margin="0,24,0,12"/>

                                                        <!-- Password -->
                                                        <TextBlock Grid.Row="1" Text="Password" Style="{StaticResource ModernLabel}"/>
                                                        <TextBox Grid.Row="1" 
                                                                 Style="{StaticResource ModernTextBox}"
                                                                 Margin="0,24,0,12"
                                                                 Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                        <!-- Folder -->
                                                        <TextBlock Grid.Row="2" Text="Folder" Style="{StaticResource ModernLabel}"/>
                                                        <Grid Grid.Row="2" Margin="0,24,0,12">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBox Grid.Column="0"
                                                                 Text="{Binding Folder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource ModernTextBox}"
                                                                 IsReadOnly="True"/>
                                                            <Button Grid.Column="1" 
                                                                Content="Browse" 
                                                                Style="{StaticResource SecondaryButton}"
                                                                Margin="12,0,0,0"
                                                                Click="BrowseUserFolder_Click"
                                                                Tag="{Binding}"
                                                                Padding="12,8"/>
                                                        </Grid>

                                                        <!-- Permissions -->
                                                        <StackPanel Grid.Row="3">
                                                            <CheckBox Content="Readonly" 
                                                                  IsChecked="{Binding ReadonlyPermission, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  Style="{StaticResource ModernCheckBox}"
                                                                  Margin="0,0,24,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Info Panel -->
                            <Border Background="{StaticResource TertiaryDarkBrush}"
                                    BorderBrush="{StaticResource AccentCyanBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="10,20,10,0">
                                <StackPanel>
                                    <TextBlock Text="ℹ️ Simple Mode Configuration" 
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentCyanBrush}"
                                               Margin="0,0,0,8"/>

                                    <TextBlock TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="• Server can be accessed from all networks by IPs: "/>
                                    </TextBlock>
                                    <ItemsControl x:Name="SimpleModeIps">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="10,5">
                                                    <StackPanel>
                                                        <TextBlock TextWrapping="Wrap"
                                                               FontSize="13"
                                                               Foreground="{StaticResource TextSecondaryBrush}">
    
                                                                <Run Text="{Binding InterfaceType}"/>
                                                                <Run Text="Network:"/>
                                                                <Run Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                                <Run Text=" ("/>
                                                                <Run Text="{Binding Description}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                                <Run Text=")"/>
                                                        </TextBlock>

                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock TextWrapping="Wrap"
                                                               FontSize="13"
                                                               Foreground="{StaticResource TextSecondaryBrush}">
                                                                <Run Text="IP Addresses: "/>
                                                            </TextBlock>

                                                            <ItemsControl ItemsSource="{Binding Addresses}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <WrapPanel Orientation="Horizontal"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding .}" 
                                                                            TextWrapping="Wrap"
                                                                            FontSize="13"
                                                                            Foreground="{StaticResource TextPrimaryBrush}"
                                                                            Margin="0 0 5 0"/>

                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>


                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <TextBlock TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                        
                                        <Run Text="• Port: "/>
                                        <Run Text="2121" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <LineBreak/>
                                        <Run Text="• User: "/>
                                        <Run Text="admin" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <LineBreak/>
                                        <Run Text="• Self-signed certificate (auto-generated)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
        </Border>
        </Grid>
    </DockPanel>
</Window>
