<UserControl x:Class="FtpsServerAvalonia.Controls.ServerConfigurationControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:FtpsServerAvalonia.Controls"
             xmlns:res="using:FtpsServerAvalonia.Resources">

    <Border Background="{StaticResource TertiaryDarkBrush}"
            BorderBrush="{StaticResource AccentCyanBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16"
            Margin="10,0,20,20">
        <StackPanel>
            <TextBlock Text="{x:Static res:Strings.ConfigTitle}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,20"/>

            <TextBlock Text="{x:Static res:Strings.ConfigAddress}" Classes="ModernLabel"/>

            <TextBlock TextWrapping="Wrap"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryBrush}">
                <Run Text="{x:Static res:Strings.ConfigAccessInfo}"/>
                <LineBreak />
                <Run Text="{x:Static res:Strings.ConfigName}"/>
                <Run x:Name="PCName" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                <LineBreak />
                <Run Text="{x:Static res:Strings.ConfigNetworkIPs}"/>
            </TextBlock>

            <ItemsControl x:Name="NetworkIpsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10 5 0 5">
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="{Binding InterfaceType}"/>
                                <Run Text="{x:Static res:Strings.ConfigNetwork}"/>
                                <Run Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding Description}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Run Text=")"/>
                            </TextBlock>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="{StaticResource TextSecondaryBrush}">
                                    <Run Text="{x:Static res:Strings.ConfigIPAddresses}"/>
                                </TextBlock>

                                <ItemsControl ItemsSource="{Binding Addresses}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding .}"
                                                       TextWrapping="Wrap"
                                                       FontSize="13"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0 0 5 0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Port -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
					VerticalAlignment="Center"
                    Text="{x:Static res:Strings.ConfigAddress}" Classes="ModernLabel"
                />
				<NumericUpDown
                    Classes="ModernTextBox"
                    Value="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="2121"
					Increment="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
					VerticalAlignment="Center"
                    x:Name="PortControl"
                    Margin="8 4 4 4"
                />

                <!-- Max Connections -->
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="1"
					VerticalAlignment="Center"
                    Text="{x:Static res:Strings.ConfigMaxConnections}"
                    Classes="ModernLabel"/>
                <NumericUpDown
					x:Name="MaxConnectionsControl"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
					Increment="1"
					Classes="ModernTextBox"
    				VerticalAlignment="Center"
                    Minimum="2"
                    Value="{Binding MaxConnections, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="8 4 4 4"/>

                <!-- Certificate -->
                <CheckBox
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.Row="2"
				    VerticalAlignment="Center"
                    x:Name="SelfSignedCertButton"
                    Content="{x:Static res:Strings.ConfigUseSelfSigned}"
                    IsChecked="True"
                    Classes="ModernCheckBox"
                    Margin="0 4 4 4"
                    Checked="CertificateSourceChanged"
                    Unchecked="CertificateSourceChanged"
                />

                <TextBlock
                    IsVisible="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Grid.Column="0"
                    Grid.Row="3"
					VerticalAlignment="Center"
                    Text="{x:Static res:Strings.ConfigCertFile}" Classes="ModernLabel"/>
                <TextBox x:Name="CertPathTextBox"
                    IsVisible="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Grid.Column="1"
                    Grid.Row="3"
                    Margin="8 4 4 4"
					VerticalAlignment="Center"
                    Classes="ModernTextBox"
                    IsReadOnly="True"
                />
                <Button
                    Grid.Column="2"
                    Grid.Row="3"
					VerticalAlignment="Center"
                    Content="{x:Static res:Strings.ConfigBrowse}"
                    IsVisible="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Classes="SecondaryButton"
                    Click="BrowseCertificate_Click"
					Margin="4" />


                <TextBlock
                    Grid.Column="0"
                    Grid.Row="4"
					VerticalAlignment="Center"
                    IsVisible="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Text="{x:Static res:Strings.ConfigCertPassword}" Classes="ModernLabel"/>
                <TextBox x:Name="CertPasswordBox"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    Grid.Row="4"
                    Margin="8 4 4 4"
                    IsVisible="{Binding CertificateUserProvidedVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Classes="ModernTextBox"
                    Text="{Binding CertificatePassword, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
