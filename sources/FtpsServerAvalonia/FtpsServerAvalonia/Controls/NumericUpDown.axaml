<UserControl x:Class="FtpsServerAvalonia.Controls.NumericUpDown"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="ValueTextBox"
                 Grid.Column="0"
                 Classes="ModernTextBox"
                 TextChanged="ValueTextBox_TextChanged"/>
                 <!-- PreviewTextInput="ValueTextBox_PreviewTextInput" - Not available in Avalonia -->

        <StackPanel Grid.Column="1" Margin="8,0,0,0">
            <Button x:Name="UpButton"
                    Content="▲"
                    Click="UpButton_Click"
                    Classes="SecondaryButton"
                    Padding="8,2"
                    FontSize="10"
                    MinWidth="30"/>
            <Button x:Name="DownButton"
                    Content="▼"
                    Click="DownButton_Click"
                    Classes="SecondaryButton"
                    Padding="8,2"
                    FontSize="10"
                    MinWidth="30"
                    Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
