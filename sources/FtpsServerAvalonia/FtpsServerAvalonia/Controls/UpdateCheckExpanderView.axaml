<UserControl x:Class="FtpsServerAvalonia.Controls.UpdateCheckExpanderView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:FtpsServerAvalonia.Controls"
			 xmlns:commands="using:FtpsServerAvalonia.Commands"
			 IsVisible="False"
             Background="{StaticResource TertiaryDarkBrush}">
	<UserControl.Resources>
		<commands:LatestReleaseCommand x:Key="LatestReleaseCommand"/>
	</UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            x:Name="updateNewsTitle"
			TextWrapping="Wrap"
			Margin="35,8,16,8"
			VerticalAlignment="Center" 
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="{StaticResource TextPrimaryBrush}"/>
        <Button
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
			Classes="SecondaryButton"
			Margin="10,10,25,10"
			VerticalAlignment="Center"
			Command="{StaticResource LatestReleaseCommand}"
			Content="Download" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
			x:Name="updateNews"
			TextWrapping="Wrap"
			Margin="35,8,16,8"
            FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
			VerticalAlignment="Center" />
    </Grid>
</UserControl>
