<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>SiarheiKuchuk.$(AssemblyName)</PackageId>
    <Title>SiarheiKuchuk.$(AssemblyName)</Title>
    <Authors>Siarhei_Kuchuk</Authors>
    <Company />
    <Description>A FTPS (FTP over TLS) server implementation in C# with logging, user permissions, and flexible configuration options. Aimed for Windows, Linux, or macOS platforms.</Description>
    <PackageProjectUrl>https://github.com/drweb86/dotnet-ftps-server</PackageProjectUrl>
    <Copyright>(c) 2025-2025 Siarhei Kuchuk</Copyright>
    <RepositoryUrl>https://github.com/drweb86/dotnet-ftps-server</RepositoryUrl>
    <PackageTags>c#;dotnet;ftps server;ftps</PackageTags>
    <PackageReleaseNotes>Initial version</PackageReleaseNotes>
  </PropertyGroup>

</Project>
